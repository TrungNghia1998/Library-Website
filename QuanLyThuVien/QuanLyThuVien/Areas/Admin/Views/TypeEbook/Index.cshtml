
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_admin2.cshtml";
}
@section scripts
{
    <script src="/scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="js/captcha/jquery.clientsidecaptcha.js" type="text/javascript"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap4.min.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Areas/Admin/Scripts/notify.min.js"></script>
    <script src="~/Areas/Admin/Scripts/TypeEbook.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });
    </script>
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Loại ebook</h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        <button style="margin-left: 27px;margin-bottom:10px;" type="button" class="btn btn-primary rounded-0" onclick="return clearModalTypeEbook();" data-toggle="modal" data-target="#modalAddOrEditTypeEbook">
                            <i class="fa fa-plus-circle"></i> Thêm mới
                        </button>
                    </div>
                    <table id="dataTable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên loại</th>
                                <th width="150px">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>@item.TypeID</td>
                                    <td>@item.Name</td>
                                    <td>
                                        <a class="btn btn-default btn-sm" onclick="return getTypeEbookByID(@item.TypeID)"><i class="fa fa-edit"></i> Sửa</a>  <a class="btn btn-danger btn-sm" onclick="return DeleteTypeEbook(@item.TypeID)"><i class="fa fa-trash"></i> Xoá</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="modalAddOrEditTypeEbook" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Loại ebook</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label>ID</label>
                        <input type="text" class="form-control" id="TypeID" value="" disabled="disabled"/>
                    </div>
                    <div class="form-group">
                        <label>Tên loại ebook</label>
                        <input type="text" class="form-control" id="Name" value="" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAddTypeEbook" onclick="return AddTypeEbook();">Add</button>
                <button type="button" class="btn btn-primary" id="btnUpdateTypeEbook" style="display:none;" onclick="UpdateTypeEbook();">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


